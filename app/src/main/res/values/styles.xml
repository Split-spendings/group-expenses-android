<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="ErrorContainer">
        <item name="android:background">@color/red</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GroupsListHeader">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_state_list</item>
        <item name="android:textColor">@color/chip_text_color_state_list</item>
        <item name="checkedIconTint">?attr/colorOnSecondary</item>
    </style>

</resources>