<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="ErrorContainer">
        <item name="android:background">@color/red</item>
    </style>

    <style name="StatusText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListHeader">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ListGroupingHeader">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Tabs">
        <item name="tabSelectedTextColor">?attr/colorSecondaryVariant</item>
        <item name="tabIndicatorColor">?attr/colorSecondaryVariant</item>
    </style>

    <!--EXAMPLE of SHIP STYLE-->
    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_state_list</item>
        <item name="android:textColor">@color/chip_text_color_state_list</item>
        <item name="checkedIconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="GroupAvatarIcon">
        <item name="android:src">@drawable/ic_baseline_group_24</item>
        <item name="android:tint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="GroupMemberAvatarIcon">
        <item name="android:src">@drawable/ic_baseline_person_24</item>
        <item name="android:tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SpendingIcon">
        <item name="android:src">@drawable/ic_baseline_receipt_24</item>
        <item name="android:tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

</resources>